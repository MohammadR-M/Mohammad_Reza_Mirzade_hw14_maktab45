<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {pageName: user.name}); %>
<body>
<%- include("../partials/header", {active: 0}) %>
<div class="container">
<div class="card">
    <h5 class="card-header">Info</h5>
    <a type="button" class="btn btn-danger" href="<%= user %>/logout">Logout</a>
    <div class="card-body">
        <h5 class="card-title">User: <%= user %></h5>
        <h5 class="card-title">Email: <%= email %></h5>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#user-update">
            Change Info
        </button>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#password-update">
            Change Password
        </button>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="password-update" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="user-update" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Understood</button>
            </div>
        </div>
    </div>
</div>

</div>
<%- include("../partials/footer") %>
</body>
</html>